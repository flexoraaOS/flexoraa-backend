{
    "dashboard": {
        "title": "Flexoraa Backend Monitoring",
        "uid": "flexoraa-backend",
        "tags": [
            "flexoraa",
            "api",
            "production"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "API Latency (p50, p95, p99)",
                "type": "graph",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
                        "legendFormat": "p50 - {{route}}"
                    },
                    {
                        "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
                        "legendFormat": "p95 - {{route}}"
                    },
                    {
                        "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
                        "legendFormat": "p99 - {{route}}"
                    }
                ],
                "gridPos": {
                    "x": 0,
                    "y": 0,
                    "w": 12,
                    "h": 8
                }
            },
            {
                "id": 2,
                "title": "Request Rate (req/s)",
                "type": "graph",
                "targets": [
                    {
                        "expr": "sum(rate(http_requests_total[5m])) by (route, status_code)",
                        "legendFormat": "{{route}} - {{status_code}}"
                    }
                ],
                "gridPos": {
                    "x": 12,
                    "y": 0,
                    "w": 12,
                    "h": 8
                }
            },
            {
                "id": 3,
                "title": "Error Rate (%)",
                "type": "graph",
                "targets": [
                    {
                        "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
                        "legendFormat": "Error Rate %"
                    }
                ],
                "gridPos": {
                    "x": 0,
                    "y": 8,
                    "w": 6,
                    "h": 8
                }
            },
            {
                "id": 4,
                "title": "AI Token Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "sum(ai_tokens_used_total) by (service)",
                        "legendFormat": "{{service}}"
                    }
                ],
                "gridPos": {
                    "x": 6,
                    "y": 8,
                    "w": 6,
                    "h": 8
                }
            },
            {
                "id": 5,
                "title": "Workflow Success Rate",
                "type": "stat",
                "targets": [
                    {
                        "expr": "sum(workflow_executions_total{status=\"success\"}) / sum(workflow_executions_total) * 100",
                        "legendFormat": "Success %"
                    }
                ],
                "gridPos": {
                    "x": 12,
                    "y": 8,
                    "w": 6,
                    "h": 8
                }
            },
            {
                "id": 6,
                "title": "WhatsApp Delivery Failures",
                "type": "table",
                "targets": [
                    {
                        "expr": "sum(whatsapp_send_failures_total) by (error_type)",
                        "format": "table"
                    }
                ],
                "gridPos": {
                    "x": 18,
                    "y": 8,
                    "w": 6,
                    "h": 8
                }
            },
            {
                "id": 7,
                "title": "Consent Opt-Out Spike Detection",
                "type": "graph",
                "targets": [
                    {
                        "expr": "sum(rate(consent_log_total{status=\"opt-out\"}[5m])) * 300",
                        "legendFormat": "Opt-outs per 5min"
                    }
                ],
                "alert": {
                    "name": "High Opt-Out Rate",
                    "conditions": [
                        {
                            "evaluator": {
                                "params": [
                                    10
                                ],
                                "type": "gt"
                            },
                            "operator": {
                                "type": "and"
                            },
                            "query": {
                                "params": [
                                    "A",
                                    "5m",
                                    "now"
                                ]
                            },
                            "reducer": {
                                "params": [],
                                "type": "avg"
                            },
                            "type": "query"
                        }
                    ]
                },
                "gridPos": {
                    "x": 0,
                    "y": 16,
                    "w": 12,
                    "h": 8
                }
            }
        ]
    }
}