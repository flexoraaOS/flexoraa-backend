{
    "info": {
        "name": "Flexoraa Backend API - Phase 1 Smoke Tests",
        "description": "Smoke tests for Phase 1 acceptance criteria",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health Checks",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "health"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Metrics",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/metrics",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "metrics"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Ready Probe",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/health/ready",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "health",
                                "ready"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Webhooks",
            "item": [
                {
                    "name": "LeadOS Webhook (Requires Auth)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "X-API-Key",
                                "value": "{{api_key}}",
                                "type": "text"
                            },
                            {
                                "key": "X-Request-Id",
                                "value": "test-request-{{$timestamp}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\"user_id\": \"00000000-0000-0000-0000-000000000001\"}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/webhooks/leados",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "webhooks",
                                "leados"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Campaigns",
            "item": [
                {
                    "name": "List Campaigns (Requires JWT)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/campaigns",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "campaigns"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "api_key",
            "value": "your_api_key_here",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "your_jwt_token_here",
            "type": "string"
        }
    ]
}