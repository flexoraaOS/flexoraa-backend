{
  "name": "flexoraa-backend-api",
  "version": "1.0.0",
  "description": "Flexoraa production backend - Express API gateway",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "smoke-test:staging": "node tests/smoke/staging.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate:up": "node scripts/migrate-node.js up",
    "migrate:down": "node scripts/migrate-node.js down",
    "migrate:reset": "node scripts/migrate-node.js reset"
  },
  "keywords": [
    "flexoraa",
    "whatsapp",
    "ai",
    "automation",
    "lead-management",
    "api-gateway"
  ],
  "author": "Flexoraa",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.2.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "@supabase/supabase-js": "^2.39.3",
    "axios": "^1.6.5",
    "prom-client": "^15.1.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.11"
  }
}