{
  "name": "flexoraa-backend-api",
  "version": "1.0.0",
  "description": "Production-ready Express.js backend replacing n8n workflows",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:local": "cross-env NODE_ENV=test LOCAL_MODE=true jest --runInBand --config jest.local.config.js",
    "test:watch": "jest --watch",
    "test:contracts": "jest --testPathPattern=tests/contracts",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "migrate": "node scripts/run-migrations.js",
    "generate-openapi": "node scripts/generate-openapi.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@pinecone-database/pinecone": "^1.1.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "opossum": "^8.1.2",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "prom-client": "^15.1.0",
    "rate-limit-redis": "^4.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}